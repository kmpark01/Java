package org.joonzis.ex;

import java.util.Scanner;

public class Ex01_Rect {
	
	int width, height;
	boolean isSquare; //정사각형 유무
	
	void setFeilds(int w, int h) {
		Scanner sc = new Scanner(System.in);
		
		System.out.println("너비를 입력하세요 >>");
		width = sc.nextInt();
		System.out.println("높이를 입력하세요 >>");
		height = sc.nextInt();
		
		if(w == h) {
			isSquare = true;
		}
		
		System.out.println("너비 :" + h);
		System.out.println("높이 :" + w);
		System.out.println("넓이 :" + calcArea());
		System.out.println(isSquare ? "정사각형" : "직사각형");
	}
	
	void setFeilds(int side) {
		width = side;
		height = side;
		isSquare = true;
		
	}
	
	int calcArea() {
		return width*height;
	}

}
