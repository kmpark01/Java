package org.joonzis.test;

import java.util.Arrays;
import java.util.Random;
import java.util.Scanner;

public class Test01 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		Random rnd = new Random();
		
		int[] lottoNum = new int[6];
		int[] myNum = new int[6];
		//int[] crrNum = new int[6];

		//내 로또 번호 입력
		System.out.println("로또 번호 6개를 입력하세요 >>");
		for(int i = 0; i < myNum.length; i++) {
			myNum[i] = sc.nextInt();
		}
		System.out.println("내 번호" + Arrays.toString(myNum));
		
		//당첨 번호 생성
		for(int i = 0; i < lottoNum.length; i++) {
			lottoNum[i] = rnd.nextInt(44)+1;
		}
		System.out.println("당첨 번호" + Arrays.toString(lottoNum));
		
		int count = 0;
		
		for(int i = 0; i < lottoNum.length; i++) {
			for(int k = 0; k < myNum.length; k++) {
				if(lottoNum[i] == myNum[k]){
					count++;				
				}
			}
		}
		
		System.out.println("맞은 번호는 :" + count + "개 입니다");
		
		
	}

}
