package org.joonzis.test;

class Computer{
	void hello() {
		System.out.println("컴퓨터 모델을 확인 해 보세요");
	}

}

class Notebook extends Computer{
	String model;
	int price, battery;
	
	public Notebook(String model, int price, int battery) {
		super();
		this.model = model;
		this.price = price;
		this.battery = battery;
	}
	
	void output() {
		System.out.println("모델 : " + model);
		System.out.println("가격 : " + price);
		System.out.println("배터리 : " + battery);
	}
}

class Tablet extends Computer{
	String model, pen;
	int price, battery;
	
	public Tablet(String model, String pen, int price, int battery) {
		super();
		this.model = model;
		this.pen = pen;
		this.price = price;
		this.battery = battery;
	}
	
	
	void output() {
		System.out.println("모델 : " + model);
		System.out.println("가격 : " + price);
		System.out.println("배터리 : " + battery);
		System.out.println("팬 : " + pen);
	}
}

public class Test02 {

	public static void main(String[] args) {
		
		Notebook notebook = new Notebook("LG그램", 1200000, 90);
		notebook.hello();
		notebook.output();
		
		System.out.println("---------------------");
		
		Tablet tablet = new Tablet("애플패드", "애플팬슬", 30, 20000000);
		tablet.output();
		// TODO 자동 생성된 메소드 스텁

	}

}
