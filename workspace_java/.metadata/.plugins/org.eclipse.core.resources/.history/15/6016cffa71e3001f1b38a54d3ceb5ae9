package org.joonzis.test;

public class Car {
	
	String model, color;
	int year;
	
	void setFields(String model, String color){
		this.model = model;
		this.color = color;
	}
	
	void setFields(String model, String color, int year) {
		this.model = model;
		this.color = color;
		this.year = year;
		
	}
	
	void output() {
		if(year == 0) {
			System.out.println("모델 :" + model);
			System.out.println("색상 :" + color);			
		} else {
			System.out.println("모델 :" + model);
			System.out.println("색상 :" + color);			
			System.out.println("년도 :" + year);
		}
	}

}
